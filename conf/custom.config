/*
* -------------------------------------------------
*  Nextflow config file for processes options
* -------------------------------------------------
* Defines general paths for input files and
* parameters for your own LAGOON-MCL analysis
*/

params {

    /* Ressources */
    max_cpus = 200
    max_memory = '750.GB'
    max_time = '336.h'

    /* General parameters */
    projectName = "lagoon-mcl"
    fasta =  "${projectDir}/data/fasta/*.fasta"
    outdir = "${projectDir}/results"

    /* Pfam database */
    scan_pfam = false
    pfam_db = null
    pfam_name = null

    /* Other information */
    annotation_files = "${projectDir}/data/annotation/*.tsv"

    /* Diamond BLASTp */
    alignment_file = null
    sensitivity = "very-sensitive"
    matrix = "BLOSUM62"
    diamond_evalue = 0.001

    /* MCL */
    I = "1.4,2,4"
    max_weight = 200 
    cluster_size = 3
}